    <!-- Modal cambiar contrase√±a -->
    <div class="modal" id="modalCambiarPass" role="dialog" aria-modal="true" aria-labelledby="tituloModal">
        <div class="modal-content">
            <button class="modal-close" id="cerrarModal" aria-label="Cerrar">&times;</button>
            <h3 id="tituloModal">Cambiar Contrase√±a</h3>
            <input type="password" id="nuevaPass" placeholder="Nueva contrase√±a (m√≠n 4 caracteres)" minlength="4" />
            <input type="password" id="confirmPass" placeholder="Confirmar contrase√±a" minlength="4" />
            <button id="guardarPass">Guardar</button>
            <p id="mensajePass" style="color:red; margin-top:10px; display:none;"></p>
        </div>
    </div>

    <script>
        // Simulamos usuario logueado almacenado en sessionStorage (deber√≠as cambiar por tu m√©todo real)
        const usuarioLogeado = JSON.parse(sessionStorage.getItem('usuarioLogeado')) || { nombre: "Invitado" };

        // Mostrar nombre usuario
        const nombreUsuarioSpan = document.getElementById('nombreUsuario');
        nombreUsuarioSpan.textContent = usuarioLogeado.nombre || "Invitado";

        // Men√∫ desplegable usuario
        const userBtn = document.getElementById('userBtn');
        const dropdownMenu = document.getElementById('dropdownMenu');
        userBtn.addEventListener('click', () => {
            const isVisible = dropdownMenu.classList.toggle('show');
            dropdownMenu.setAttribute('aria-hidden', !isVisible);
            userBtn.setAttribute('aria-expanded', isVisible);
        });

        // Cerrar men√∫ si clic fuera
        document.addEventListener('click', (e) => {
            if (!userBtn.contains(e.target) && !dropdownMenu.contains(e.target)) {
                dropdownMenu.classList.remove('show');
                dropdownMenu.setAttribute('aria-hidden', 'true');
                userBtn.setAttribute('aria-expanded', 'false');
            }
        });

        // Cerrar sesi√≥n
        const btnCerrarSesion = document.getElementById('btnCerrarSesion');
        btnCerrarSesion.addEventListener('click', () => {
            sessionStorage.removeItem('usuarioLogeado');
            alert('Sesi√≥n cerrada correctamente.');
            window.location.href = 'login.html';
        });

        // Cambiar contrase√±a
        const btnCambiarPass = document.getElementById('btnCambiarPass');
        const modalCambiarPass = document.getElementById('modalCambiarPass');
        const cerrarModal = document.getElementById('cerrarModal');
        const guardarPass = document.getElementById('guardarPass');
        const nuevaPassInput = document.getElementById('nuevaPass');
        const confirmPassInput = document.getElementById('confirmPass');
        const mensajePass = document.getElementById('mensajePass');

        btnCambiarPass.addEventListener('click', () => {
            dropdownMenu.classList.remove('show');
            dropdownMenu.setAttribute('aria-hidden', 'true');
            userBtn.setAttribute('aria-expanded', 'false');
            nuevaPassInput.value = '';
            confirmPassInput.value = '';
            mensajePass.style.display = 'none';
            modalCambiarPass.classList.add('show');
        });

        cerrarModal.addEventListener('click', () => {
            modalCambiarPass.classList.remove('show');
        });

        guardarPass.addEventListener('click', () => {
            const nuevaPass = nuevaPassInput.value.trim();
            const confirmPass = confirmPassInput.value.trim();

            if (nuevaPass.length < 4) {
                mensajePass.textContent = "La contrase√±a debe tener al menos 4 caracteres.";
                mensajePass.style.display = "block";
                return;
            }
            if (nuevaPass !== confirmPass) {
                mensajePass.textContent = "Las contrase√±as no coinciden.";
                mensajePass.style.display = "block";
                return;
            }

            // Guardar nueva contrase√±a en sessionStorage (simulado)
            let user = JSON.parse(sessionStorage.getItem('usuarioLogeado'));
            if (user) {
                user.contrase√±a = nuevaPass;
                sessionStorage.setItem('usuarioLogeado', JSON.stringify(user));
                alert('Contrase√±a cambiada exitosamente.');
                modalCambiarPass.classList.remove('show');
            } else {
                mensajePass.textContent = "Error al cambiar la contrase√±a.";
                mensajePass.style.display = "block";
            }
        });
    </script>

</body>
